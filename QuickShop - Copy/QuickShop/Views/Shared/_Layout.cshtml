<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="~/img/logos/logo.png">
    <title>@ViewData["Title"] | Quick Shop</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link id="pagestyle" href="~/css/material.css?v=3.0.0" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
</head>
<body class="g-sidenav-show bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3  bg-gradient-warning shadow-warning" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0 d-flex" asp-controller="Employee" asp-action="Index" style="font-size: 20px;">
                <img src="~/img/logos/logo.png" class="navbar-brand-img" height="40" width="40">
                <span class="ms-1 font-weight-bold text-white">
                    <strong class="">QUICK</strong>
                    <strong class="text-dark">SHOP</strong>
                </span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto  max-height-vh-100" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white"  role="button" aria-expanded="false" asp-controller="Employee" asp-action="Index">
                        <i class="material-icons opacity-10">dashboard</i>
                        <span class="nav-link-text ms-2 ps-1 font-weight-bold">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    @*active collapsed show active*@
                    <a data-bs-toggle="collapse" href="#user" class="nav-link text-white"  aria-controls="pagesExamples" role="button" aria-expanded="true">
                        <i class="material-icons-round">account_box</i>
                        <span class="nav-link-text ms-2 ps-1 font-weight-bold">User</span>
                    </a>
                    <div class="collapse" id="user">
                        <ul class="nav ">
                            <li class="nav-item ">
                                <a class="nav-link text-white" asp-controller="" asp-action="New">
                                    <span class="sidenav-mini-icon font-weight-bolder">N</span>
                                    <span class="sidenav-normal ms-2 ps-1 font-weight-bold text-white">New</span>
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link active text-white " aria-expanded="false" asp-controller="Employee" asp-action="Users">
                                    <span class="sidenav-mini-icon font-weight-bolder">L</span>
                                    <span class="sidenav-normal ms-2 ps-1 font-weight-bold">List</span>
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link active text-white " aria-expanded="false" asp-controller="Employee" asp-action="Activities">
                                    <span class="sidenav-mini-icon font-weight-bolder"> A </span>
                                    <span class="sidenav-normal ms-2 ps-1 font-weight-bold"> Activity</span>
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link active text-white " aria-expanded="false" asp-controller="Employee" asp-action="Archives">
                                    <span class="sidenav-mini-icon font-weight-bolder"> A </span>
                                    <span class="sidenav-normal ms-2 ps-1 font-weight-bold"> Archives</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </aside>
    <main role="main" class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        @{
                            string[] breads = ((string[])ViewData["breadcrumbs"]);
                            for (int bread = 0; bread < breads.Length; bread++)
                            {

                                if ((breads.Length - bread) == 1)
                                {
                                    <li class="breadcrumb-item text-sm text-dark font-weight-bold">@breads[bread]</li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item text-sm text-dark text-muted">@breads[bread]</li>
                                }
                            }
                        }
                    </ol>
                   
                    <h5 class="font-weight-bold mt-3 mb-0 ">@ViewData["Title"]</h5>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center"></div>
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                            </a>
                        </li>
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0">
                                <!-- <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i> -->
                            </a>
                        </li>
                        <li class="nav-item dropdown pe-2 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-bell cursor-pointer"></i>
                            </a>
                            <ul class="dropdown-menu  dropdown-menu-end  px-2 py-3 me-sm-n4" aria-labelledby="dropdownMenuButton">
                                <li class="mb-2">
                                    <a class="dropdown-item border-radius-md" href="#">
                                        <div class="d-flex py-1">
                                            <div class="my-auto">
                                                <img src="" class="avatar avatar-sm  me-3 ">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="text-sm font-weight-normal mb-1">
                                                    <span class="font-weight-bold">New message</span> from Laur
                                                </h6>
                                                <p class="text-xs text-secondary mb-0">
                                                    <i class="fa fa-clock me-1"></i>
                                                    13 minutes ago
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            @*@await Html.PartialAsync("_LoadView")*@
            @RenderBody()
            <footer class="footer py-4  ">
                <div class="container-fluid">
                    <div class="row align-items-center justify-content-lg-between">
                        <div class="col-lg-6 mb-lg-0 mb-4">
                            <div class="copyright text-center text-sm text-muted text-lg-start">
                                Copyright © 2021 Qucik Shop. All Rights Reserved
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </main>
    <script src="~/lib/core/popper.js"></script>
    <script src="~/lib/core/bootstrap.js"></script>
    <script src="~/lib/plugins/perfect-scrollbar.js"></script>
    <script src="~/lib/plugins/smooth-scrollbar.js"></script>
    <script src="~/js/material.js?v=3.0.0"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
